      <param name="camera_image_height" type="int" value="1080"/>
      <param name="camera_cmos_width" type="double" value="5.28"/>
      <param name="camera_cmos_height" type="double" value="2.97"/> 
      <param name="camera_pixel_size" type="double" value="3.75"/> 
      <param name="camera_file" value="$(find fixed_hk_camera)/launch/66color_map0_-10.yaml"/>
